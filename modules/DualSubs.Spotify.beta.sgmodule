DualSubs.Spotify.Lyrics.request.json = type=http-request, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/(.+)\?(.*)format=json, requires-body=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Spotify/beta/js/DualSubs.Spotify.request.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}
DualSubs.Spotify.Lyrics.request.proto = type=http-request, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/\w+\?(.*), requires-body=1, binary-body-mode=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Spotify/beta/js/DualSubs.Spotify.request.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}

DualSubs.Spotify.Translate.Lyrics.response.json = type=http-response, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/(.+)\?(.*)format=json(.*)subtype=Translate, requires-body=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Universal/beta/js/Translate.response.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}
DualSubs.Spotify.Translate.Lyrics.response.proto = type=http-response, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/\w+\?(.*)subtype=Translate, requires-body=1, binary-body-mode=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Universal/beta/js/Translate.response.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}

DualSubs.Spotify.External.Lyrics.response.json = type=http-response, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/(.+)\?(.*)format=json(.*)subtype=External, requires-body=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Universal/beta/js/External.Lyrics.response.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}
DualSubs.Spotify.External.Lyrics.response.proto = type=http-response, pattern=^https?:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/\w+\?(.*)subtype=External, requires-body=1, binary-body-mode=1, debug=1, script-path=https://raw.githubusercontent.com/DualSubs/Universal/beta/js/External.Lyrics.response.beta.js, argument=Vendor={{{Vendor}}}&LrcVendor={{{LrcVendor}}}

